- if f.error_notification
  .alert.error.fade.in= f.error_notification
%ul.nav.nav-tabs
  %li.active
    %a{:"data-toggle" => "tab", :href => "#infoTab"}= t(".tab.info_tab")
  %li
    %a{:"data-toggle" => "tab", :href => "#settingsTab"}= t(".tab.settings_tab")
.tab-content
  #infoTab.tab-pane.active
    = f.input :email, :input_html => { :class => "span6" }
    = f.input :firstname, :input_html => { :class => "span6" }
    = f.input :lastname, :input_html => { :class => "span6" }
    = f.input :nickname, :input_html => { :class => "span6" }
    = f.input :password, :input_html => { :class => "span6" }
    = f.input :weburl, :input_html => { :class => "span6" }
  #settingsTab.tab-pane
= f.button :submit
